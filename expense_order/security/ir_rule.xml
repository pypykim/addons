<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="property_rule_expense_order_manager" model="ir.rule">
            <field name="name">Manager Expense Order</field>
            <field name="model_id" ref="model_expense_order"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('account.group_account_user')), (4, ref('base.group_hr_manager')), (4, ref('base.group_hr_user'))]"/>
        </record>
        <record id="property_rule_expense_order_employee" model="ir.rule">
            <field name="name">Employee Expense Order</field>
            <field name="model_id" ref="model_expense_order"/>
            <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        <record id="expense_order_comp_rule" model="ir.rule">
            <field name="name">Expense order multi company rule</field>
            <field name="model_id" ref="model_expense_order"/>
            <field eval="True" name="global"/>
            <field name="domain_force">['|',('company_id', '=', False), ('company_id', 'child_of', [user.company_id.id])]</field>
        </record>

    </data>
</odoo>
